<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_dialog_rating"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:scaleX="0"
    android:scaleY="0"
    tools:alpha="1"
    tools:scaleX="1"
    tools:scaleY="1">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="60dp"
        android:src="@drawable/bg_ribbon_left"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="60dp"
        android:src="@drawable/bg_ribbon_right"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_layout">

        <ImageView
            android:id="@+id/img_top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_header"
            android:orientation="vertical"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            app:srcCompat="@drawable/icon_close_circle"
            android:tint="#23323F"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_top_bar"
            android:paddingBottom="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Do you love this app?"
                android:textColor="#2c3e50"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#757575"
                android:gravity="center"
                android:text="Rate me!"
                android:textSize="18dp"
                tools:ignore="HardcodedText,SpUsage" />

            <stream.customratingdialogue.ScaleRatingBar
                android:id="@+id/rating_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:visibility="invisible"
                app:rating_starPadding="6dp"
                tools:visibility="visible"
                tools:layout_height="50dp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/bg_submit"
        android:gravity="center"
        android:text="Review Now"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />

    <ImageView
        android:id="@+id/img_rating_header"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/favorite"
        tools:ignore="ContentDescription" />
</FrameLayout>
